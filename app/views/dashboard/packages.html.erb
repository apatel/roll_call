<h1>Packages</h1>

<div>
  	<table id="packages-table" class="table table-condensed tablesorter">
	<thead>
	  <tr>
		<th>Name</th>
		<th>Actions</th>
	  </tr>
	</thead> 
	<tbody>
	    <% @packages.each do |package| %>
	    	<tr>
	  	  <td><%= package.name %></td>
		  <td>
	   		<%= link_to('Edit', edit_package_path(package), :class => "action-edit") %> | <%= link_to('Delete', package_path(package), :confirm => "Are you sure?", :method => :delete) %>
		  </td>
	    </tr>
	    <% end %>
	</tbody>	
	</table>
	
</div>